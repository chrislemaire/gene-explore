<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxDefaultTag -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/8.0.172-ea">
    <children>
        <HBox fx:id="topBar" alignment="TOP_CENTER" maxHeight="50.0" minHeight="25.0" styleClass="lbl-primary">
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="collapseBtn" alignment="CENTER" contentDisplay="CENTER" ellipsisString=""
                        minHeight="24.0" minWidth="24.0" onAction="#collapse" textAlignment="CENTER" HBox.hgrow="NEVER" styleClass="lbl-primary">
                    <graphic>
                        <FontIcon iconLiteral="dashicons-minus"/>
                    </graphic>
                </Button>
            </children>
            <effect>
                <Glow/>
            </effect>
        </HBox>
        <Pane minHeight="100.0" minWidth="100.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <Pane fx:id="content"/>
        </Pane>
    </children>
</fx:root>
