<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxDefaultTag -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/8.0.172-ea">
    <HBox fx:id="topBar" alignment="TOP_CENTER" style="-fx-background-color: #BDBDBD;" maxHeight="50.0"
          minHeight="25.0">
        <children>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="collapseBtn" onAction="#collapse" alignment="CENTER" contentDisplay="CENTER"
                    ellipsisString="" textAlignment="CENTER" minWidth="25.0" minHeight="25.0" HBox.hgrow="NEVER">
                <graphic>
                    <FontIcon iconLiteral="dashicons-minus"/>
                </graphic>
            </Button>
        </children>
        <effect>
            <Glow/>
        </effect>
    </HBox>
    <AnchorPane fx:id="content" style="-fx-background-color: #E0E0E0;"
                BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS"/>
</fx:root>
